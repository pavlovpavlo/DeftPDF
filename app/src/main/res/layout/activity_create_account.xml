<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registration.CreateAccountActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/main_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/main_margin" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_reg"
        android:text="@string/create_an_account"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/back_btn" />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_reg"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edittext_bg"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:fontFamily="@font/roboto_reg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#878787"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/name_title" />

    <TextView
        android:id="@+id/title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_reg"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/name_edittext" />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edittext_bg"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@null"
        android:fontFamily="@font/roboto_reg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#878787"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/title_email" />

    <TextView
        android:id="@+id/title_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_reg"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/email_edittext" />

    <EditText
        android:id="@+id/pass_edittext"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edittext_bg"

        android:textCursorDrawable="@null"
        android:fontFamily="@font/roboto_reg"
        android:inputType="textWebPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#878787"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/title_pass" />

    <TextView
        android:id="@+id/title_pass_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_reg"
        android:inputType="textEmailAddress"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/pass_edittext" />

    <EditText
        android:id="@+id/pass_edittext_repeat"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edittext_bg"

        android:textCursorDrawable="@null"
        android:fontFamily="@font/roboto_reg"
        android:inputType="textWebPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#878787"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/title_pass_repeat" />

    <CheckBox
        android:id="@+id/pass_shower"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/pass_selector"
        android:button="@null"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@id/pass_edittext"
        app:layout_constraintEnd_toEndOf="@id/pass_edittext"
        app:layout_constraintTop_toTopOf="@id/pass_edittext" />

    <CheckBox
        android:id="@+id/pass_repeat_shower"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/pass_selector"
        android:button="@null"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@id/pass_edittext_repeat"
        app:layout_constraintEnd_toEndOf="@id/pass_edittext_repeat"
        app:layout_constraintTop_toTopOf="@id/pass_edittext_repeat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_account"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_main_btn"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/robobo_medium"
        android:text="@string/create_an_account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/pass_edittext_repeat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_google"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_main_btn_outline"
        android:drawableStart="@drawable/icons_google"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/robobo_medium"
        android:paddingStart="13dp"
        android:text="@string/sign_up_with_google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/create_account" />

    <TextView
        android:id="@+id/have_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto_reg"
        android:text="@string/already_have_an_account"
        android:textColor="@color/gray_87"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_reg"
        android:text="@string/login"
        android:textColor="@color/main"
        android:textSize="14sp"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_google"
        android:layout_marginTop="15dp"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="3dp"
        app:flow_horizontalStyle="packed"
        app:layout_constraintEnd_toEndOf="@id/content_end"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:constraint_referenced_ids="have_account_title,have_account"/>

    <include layout="@layout/layout_error"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>